#!/usr/bin/env bash

if [ -z $QSMain ]; then
    echo "set QSMain=<reponame>"
    exit 0
fi

if [[ -d ~/.config/quickshell ]]; then
    # Backup previous config
    mv ~/.config/quickshell ~/.config/quickshell.bak/
fi

pushd $HOME/.config

echo "Moving"
cp -r $QSMain/src ~/.config
mv ~/.config/src ~/.config/quickshell
echo "Moved"

popd
